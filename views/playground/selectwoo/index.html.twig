{% extends '@pulsar/pulsar/layouts/base.html.twig' %}

{% set heading = 'selectWoo test' %}

{% block tabs_content %}
{{
    form.create()
}}
{% set i = 1 %}

{{
    form.text({
        'label': 'Start focus',
        'id': i
    })
}}
{% set i = i + 1 %}

{{
    form.select({
        'id': i,
        'label': 'Standard Select',
        'options': [
            {
                'label': 'Value one',
                'value': 'value1'
            },
            {
                'label': 'Value two',
                'value': 'value2'
            },
            {
                'label': 'Value three',
                'value': 'value3'
            }
        ]

    })
}}
{% set i = i + 1 %}

{{
    form.select2({
        'id': i,
        'label': 'Test Alpha',
        'options': [
            {
                'label': 'Value one',
                'value': 'value1'
            },
            {
                'label': 'Value two',
                'value': 'value2'
            },
            {
                'label': 'Value three',
                'value': 'value3'
            }
        ]

    })
}}
{% set i = i + 1 %}

{{
    form.end({
        'actions': [
            form.submit({
                'class': 'btn--primary',
                'label': 'Primary Action'
            }),
            html.button({
                'class': 'btn--naked',
                'type': 'link',
                'label': 'Cancel',
                'href': '/home'
            })
        ]
    })
}}
{% endblock %}
