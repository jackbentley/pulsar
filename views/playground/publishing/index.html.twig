{% extends '@pulsar/pulsar/layouts/base.html.twig' %}

{% import '@pulsar/pulsar/v2/helpers/html.html.twig' as html %}
{% import '@pulsar/pulsar/v2/helpers/form.html.twig' as form %}
{% import '@pulsar/pulsar/v2/helpers/tabs.html.twig' as tabs %}
{% import '@pulsar/pulsar/v2/helpers/flash.html.twig' as flash %}

{% block title %}{{ parent() }}{% endblock %}

{% set heading = 'Generic list UI for Publishing' %}

{%
    set nav_data = {
        "1": {
            "label": "Gereric Template",
            "class": "is-active",
            "href": "/app/app.php/playground/publishing/index.html.twig",
            "icon": "folder"
        }
    }
%}

{% set tab_one %}
    {% include 'playground/publishing/generic.html.twig' %}
{% endset %}

{%
    set tabs_content = [
        {
          "id"    : "generic_content",
          "label" : "Content",
          "src"   : tab_one,
          "active": true
        }
    ]
%}

{% block tabs_list %}
    {{ tabs.list(tabs_content) }}
{% endblock %}

{% block tabs_content %}
    {{ tabs.content(tabs_content) }}
{% endblock %}
